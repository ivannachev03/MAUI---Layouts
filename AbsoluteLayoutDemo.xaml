<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.AbsoluteLayoutDemo"
             Title="AbsoluteLayoutDemo">
    <AbsoluteLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            AbsoluteLayout.LayoutBounds=".05, .05, .25, .25"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="Green"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="Welcome to .NET MAUI!"
            AbsoluteLayout.LayoutBounds=".3, .3, .4, .25"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="LightBlue"
            TextColor="Red"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Main Menu"
                AbsoluteLayout.LayoutBounds=".5, .5, .3, .1"
                AbsoluteLayout.LayoutFlags="All"
                Clicked="Button_Clicked"
                SemanticProperties.Hint="Goes back to main menu"/>
    </AbsoluteLayout>
</ContentPage>